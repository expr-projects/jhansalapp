<!doctype html>
<html>
<head>
    <title>Login Page</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body style="background-image: url(images/7.jpg);background-repeat:  no-repeat;">
<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1 style="color:#fff"><span class="fa fa-sign-in" style="color:#fff"></span> Login</h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="form-group" style="color:#fff">
            <label >Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group" style="color:#fff">
            <label >Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-default"><span class="fa fa-user"></span> Login</button>
        <a href="/signup" class="btn btn-default"><span class="fa fa-user"></span> Signup</a>
        <a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter"></span> Twitter</a>
        <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google+</a>

    </form>




</div>
</div>
</body>
</html>
